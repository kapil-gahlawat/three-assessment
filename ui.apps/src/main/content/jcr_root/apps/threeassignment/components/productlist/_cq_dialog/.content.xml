<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            jcr:title="Text">
                        <items jcr:primaryType="nt:unstructured">
                            <header
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Header"
                                    name="./header"/>
                            <headerTextColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Header Text Color"
                                    name="./headerTextColor"/>
                            <subheader
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Subheader"
                                    name="./subheader"/>
                            <subheaderTextColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Subheader Tect Color"
                                    name="./subheaderTextColor"/>
                            <backgroundColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Background Color"
                                    name="./backgroundColor"/>
                            <productNameTextColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                    fieldLabel="Product Name Text Color"
                                    name="./productNameTextColor"/>
                        </items>
                    </column>
                    <carousel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            jcr:title="Carousel">
                        <items jcr:primaryType="nt:unstructured">
                            <loop
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Loop"
                                    fieldDescription="Check if you want to play carousel in loop"
                                    name="./loop"
                                    value="{Boolean}true"
                                    uncheckedValue="{Boolean}false"
                                    checked="true"/>
                            <nav
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Navigation Icons"
                                    fieldDescription="Check if you want to Have Navigations Icons (Left and Right arrow)"
                                    name="./nav"
                                    value="true"
                                    uncheckedValue="{Boolean}false"
                                    checked="true"/>
                            <dots
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Pagination Dots"
                                    fieldDescription="Check if you want to Have pagination dots"
                                    name="./dots"
                                    value="true"
                                    uncheckedValue="{Boolean}false"
                                    checked="false"/>
                            <dotsType
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
                                    name="./dots@TypeHint"
                                    value="String"/>
                            <slideBy
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Slide by"
                                    fieldDescription="Enter slide By value: page, 1, 2 etc"
                                    name="./slideBy"
                                    defaultValue="page"
                                    value="page"
                                    emptyText="page"/>
                        </items>
                    </carousel>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>